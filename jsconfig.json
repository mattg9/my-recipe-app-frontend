{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "es2017"],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
